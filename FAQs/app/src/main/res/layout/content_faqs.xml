<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_faqs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.faqs.FAQs"
    tools:showIn="@layout/activity_faqs">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQs"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_dark"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/FAQs" />
    <TextView
        android:text="1. Πως θα γνωρίζω εάν το κατάστημα έχει παραλάβει την παραγγελία μου;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/background_dark" />
    <CheckedTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginTop="38dp"
        android:id="@+id/checkedTextView" />
    <TextView
        android:text="Όταν ολοκληρώσετε την παραγγελία και φτάσει στο κατάστημα, τότε θα παραλάβετε ένα email όπου θα επιβεβαιώνεται η παραγγελία σας."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="12sp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="2. Ποιές επιλογές πληρωμής έχω;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView8"
        android:layout_toRightOf="@+id/checkedTextView"
        android:layout_toEndOf="@+id/checkedTextView"
        android:layout_marginTop="14dp" />
    <TextView
        android:text="Υπάρχει μόνο μια επιλογή πληρωμής και αυτή είναι με μετρητά. "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="12sp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="3. Που μπορώ να επικοινωνήσω σε περίπτωση που αντιμετωπίζω κάποιο πρόβλημα με την δημιουγία παραγγελίας;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />
    <TextView
        android:text="Σε περίπτωση που έχετε πρόβλημα με την δημιουργία παραργγελίας , μπορείτε να επικοινωνήσετε στα ακόλουθα τηλέφωνα: 22 103708 / 96 619245"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="12sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="4. Ποιά ώρα ξεκινά και ποιά ώρα τελειώνει η λειτουργεί η υπηρεσία delivery και για ποιές μέρες ισχύει;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
    <TextView
        android:text="Η υπηρεσία του delivery λειτουργεί ως εξής:  Δευτέρα-Παρασκευή από τις 6:30-19:00, Σάββατο 6:30-16:00 και τις Κυριακές δεν προσφέρεται η υπηρεσία."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="12sp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="5. Ποιές ώρες λειτουργεί η υπηρεσία take-away;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/checkedTextView"
        android:layout_toRightOf="@+id/checkedTextView"
        android:layout_toEndOf="@+id/checkedTextView" />
    <TextView
        android:text="Η υπηρεσία take-away λειτουργεί όλες τις μέρες της εβδομάδας τις εξής ώρες: 6:30-00:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_toRightOf="@+id/checkedTextView"
        android:layout_toEndOf="@+id/checkedTextView"
        android:id="@+id/textView12" />
    <TextSwitcher
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >
        <TextureView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textureView" />
    </TextSwitcher>
</RelativeLayout>