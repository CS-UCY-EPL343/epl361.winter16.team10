        android:text="Contact Us"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/but3"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimary"
        android:layout_alignBaseline="@+id/but2"
        android:layout_alignBottom="@+id/but2"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:text="FAQs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/but3"
        android:layout_alignBottom="@+id/but3"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_toRightOf="@+id/but3"
        android:layout_toEndOf="@+id/but3" />

