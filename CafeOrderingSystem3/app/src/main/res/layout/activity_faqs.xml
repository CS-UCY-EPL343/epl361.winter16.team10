            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="@android:color/background_dark"
        android:layout_above="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Η υπηρεσία του delivery λειτουργεί ως εξής:  Δευτέρα-Παρασκευή από τις 6:30-19:00, Σάββατο 6:30-16:00 και τις Κυριακές δεν προσφέρεται η υπηρεσία."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="12sp"
        android:layout_above="@+id/textView6"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light" />

    <TextView
        android:text="4. Ποιά ώρα ξεκινά και ποιά ώρα τελειώνει η λειτουργεί η υπηρεσία delivery και για ποιές μέρες ισχύει;"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@android:color/background_dark"
        android:layout_above="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Σε περίπτωση που έχετε πρόβλημα με την δημιουργία παραργγελίας , μπορείτε να επικοινωνήσετε στα ακόλουθα τηλέφωνα: 22 103708 / 96 619245"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="12sp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
